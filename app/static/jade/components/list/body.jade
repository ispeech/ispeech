div.row
    div.col-md-12
        carousel(interval="myInterval")
            slide(ng-repeat="slide in slides" active="slide.active")
                img.img-responsive(ng-src="{{slide.image}}" style="margin:auto;width: 100%;")
                div.carousel-caption
                    h4 Slide {{$index}}
                    p {{slide.text}}

