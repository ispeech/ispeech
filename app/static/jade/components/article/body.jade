div.row
    div.author
        div.col-sm-5
            div.author_img
                img.img-responsive(height="100%" src="http://ofinksandpapers.files.wordpress.com/2011/10/126933-steve-jobs.jpg" alt="")
        div.col-sm-7
            ul
                li
                    label 講者：
                    span {{body.article.lecturer.name}}
                li
                    label 時間：
                    span {{body.article.lecturer.lectureDate}}
                li
                    label 標籤：
                    span(ng-repeat="(key, tag) in body.article.tags") {{tag}}
                li
                    label 講者介紹：
                    span {{body.article.abstract}}


div(style="max-width: 890px;margin:0 auto;color:#333333;")
        //- div.fix-section
        div
            div.video-container(ng-show="body.article.video" ng-bind-html="body.article.video")
            div.fb-like-box(data-href="https://www.facebook.com/Speaker.tw" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="true")
            div.fb-share-button(data-type="icon_link")

        tabset#myTab.nav.nav-tabs()
            tab(heading="中文稿" ng-show="body.article.speech.chinese")
                div.content(ng-bind-html="body.article.speech.chinese")
            tab(heading="中英文對照" ng-show="body.article.speech.mix")
                div.content(ng-bind-html="body.article.speech.mix")
            tab(heading="英文稿" ng-show="body.article.speech.english")
                div.content(ng-bind-html="body.article.speech.english")

        div#disqus_thread.disqus_thread
        //- disqus
        script(type="text/javascript").
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'httpispeechnet'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        noscript Please enable JavaScript to view the
            a(href="http://disqus.com/?ref_noscript") comments powered by Disqus.
